{
  "name": "advertisement-management-ts-app",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "client",
    "server",
    "scripts"
  ],
  "scripts": {
    "start-client": "npm --workspace client run dev",
    "build-client": "npm --workspace client run build",
    "start-server": "npm --workspace server run dev",
    "start-server:prod": "npm --workspace server run start",
    "build-server": "npm --workspace server run build",
    "convert-font": "ts-node scripts/convert-font.cjs",
    "dev": "concurrently \"npm run start-client\" \"npm run start-server\"",
    "build-all": "npm run build-server && npm run build-client",
    "cy:run": "npx cypress run --config-file client/cypress.config.ts"
  },
  "devDependencies": {
    "@types/pdfmake": "^0.2.11",
    "concurrently": "^9.2.1",
    "start-server-and-test": "^2.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "pdfmake": "^0.2.20",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typeface-roboto": "^1.1.13"
  }
}
